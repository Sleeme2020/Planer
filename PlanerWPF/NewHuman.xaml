<Window x:Class="PlanerWPF.NewHuman"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanerWPF"
        mc:Ignorable="d"
        Title="NewHuman" Height="281" Width="501">
    <Grid Margin="0,0,0,-6">
        <TextBox Text="{Binding NewName}" HorizontalAlignment="Left" Margin="45,54,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="346" Height="25"/>
        <TextBox Text="{Binding FirstName}" HorizontalAlignment="Left" Margin="45,130,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="346" Height="29"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="377,212,0,0" VerticalAlignment="Top" Height="31" Width="79" Click="Button_Click" Command="{Binding NewHuman}"/>

    </Grid>
</Window>
